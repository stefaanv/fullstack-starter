{
  "extends": "../../tsconfig.base.json",
  "references": [
    {
      "path": "../shared"
    }
  ],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  }
}